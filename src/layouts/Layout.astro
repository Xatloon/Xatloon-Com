---
import { ViewTransitions } from 'astro:transitions'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/base.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="aa">
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='âœ¨ Coding with Love, Exploring the World.'
    />
    <meta
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <link
      rel='icon'
      type='image/x-icon'
      href='/favicon.ico'
    />
    <link
      rel='manifest'
      href='/site.webmanifest'
    />
    <meta
      name='theme-color'
      content='#fffcec'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <meta
      name='apple-mobile-web-app-title'
      content='Xat'
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class='bg-slate-50 dark:bg-slate-950 text-slate-950 dark:text-slate-50 subpixel-antialiased scroll-smooth bg-[url(/diamond.svg)] dark:bg-[url(/grid.svg)] bg-fixed'
  >
    <div class='flex flex-col gap-4 px-6 pt-10 md:mx-auto md:w-10/12 md:px-40 bg-slate-50 dark:bg-slate-950/75'>
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
