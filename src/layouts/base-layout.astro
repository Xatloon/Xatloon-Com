---
import Footer from '@/components/ui/footer.astro'
import Header from '@/components/ui/header.astro'
import Meta from '@/components/ui/meta.astro'

import '@/styles/base.css'

interface Props {
  description?: string
  title?: string
}

const { description = 'âœ¨ Coding with Love, Exploring the World.', title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <Meta description={description} />
    <title>{title ? `${title} | Xat` : 'Hi, Xat!'}</title>
  </head>
  <body
    class="min-h-screen scroll-smooth bg-slate-50 bg-fixed text-slate-950 subpixel-antialiased"
  >
    <Header />
    <content class="flex flex-col gap-8">
      <slot />
    </content>
    <Footer />
  </body>
</html>
