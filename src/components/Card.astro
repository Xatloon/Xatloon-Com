---
interface Props {
    title: string;
    description: string;
    image: string;
    url: string;
    date: string;
    tags: string[];
}

const { title, description, image, url, date, tags } = Astro.props;
---
<a href={url}>
<div class="relative bg-origin-border rounded-3xl p-2 h-60 bg-cover" style=`background-image: url(${image});`>
			<div class="absolute bottom-0 rounded-b-3xl left-0 bg-[#ffffff]/[.25] backdrop-blur-[33px] w-full p-2">
				<div class="text-md font-bold">
					{title}
				</div>
                <div class="text-xs">
                    {date}
                </div>
                <div class="text-sm flex gap-1">
                    {tags.map((tag) => (
                        <span>#{tag}</span>
                    ))}</div>
				<div class="text-sm truncate">
					{description}
				</div>
			</div>
</div>
</a>
