---
import type { AstroVNode } from 'astro/jsx-runtime'

interface Props {
  title: string
  url: string
  label?: AstroVNode
  showRedirect?: boolean
  subtitle: string
}

const { title, url, subtitle, showRedirect } = Astro.props;
---
<a href={url}>
  <div class="flex items-center justify-between gap-2 overflow-hidden rounded-xl p-4 ring-2 ring-slate-200 transition-all hover:ring-slate-950 ">
    <div class="flex flex-col">
      <h3 class="truncate font-medium">
        {title}
      </h3>
      <h4 class="text-sm text-gray-500">
        {subtitle}
      </h4>
    </div>
    {showRedirect && (
      <span class="i-mingcute-external-link-line text-slate-500"></span>
    )}
  </div>

</a>
